<% layout('layout/boilerplate' ) %>
    <div>
        <a href="/campground/new">Add Campground</a>
    </div>
    <h1>ALL CAMPGROUNDS</h1>
    <ul>
        <% for(let i of camp){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= i.image[0].url %> " alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"> <%= i.title %> </h5>
                             <p class="card-text"> <%= i.description %></p>
                             <p class="card-text">
                                 <small class="text-mutes"><%= i.location %> </small>
                             </p>
                            <a class="btn btn-primary" href="/campground/<%= i._id %> ">view <%= i.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>